{
  "name": "mobile-app-native",
  "version": "1.0.0",
  "description": "React Native MongoDB Express NodeJS Notes App",
  "homepage": "https://github.com/angel33la/notes-app#readme",
  "bugs": {
    "url": "https://github.com/angel33la/notes-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angel33la/notes-app.git"
  },
  "license": "ISC",
  "author": "Angella McConnell",
  "type": "commonjs",
  "main": "index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "install-reactjs": "npm install --prefix frontend --include=dev",
    "install-api": "npm install --prefix backend --include=dev",
    "build-reactjs": "npm run build --prefix frontend",
    "heroku-postbuild": "npm run install-reactjs && npm run install-api && npm run build-reactjs",
    "start": "npm start --prefix backend",
    "dev:react": "concurrently --raw \"npm run api\" \"npm run react\"",
    "react": "cd frontend && expo start",
    "api": "cd backend; nodemon server.js",
    "predeploy": "npm run build-reactjs",
    "deploy": "gh-pages -d build-reactjs"
  },
  "dependencies": {
    "array-union": "^2.1.0",
    "async": "^3.2.6",
    "braces": "^3.0.3",
    "commander": "^13.1.0",
    "commondir": "^1.0.1",
    "concurrently": "^9.2.1",
    "dir-glob": "^3.0.1",
    "email-addresses": "^5.0.0",
    "escape-string-regexp": "^1.0.5",
    "fast-glob": "^3.3.3",
    "fastq": "^1.19.1",
    "filename-reserved-regex": "^2.0.0",
    "filenamify": "^4.3.0",
    "fill-range": "^7.1.1",
    "find-cache-dir": "^3.3.2",
    "find-up": "^4.1.0",
    "fs-extra": "^11.3.2",
    "glob-parent": "^5.1.2",
    "globby": "^11.1.0",
    "graceful-fs": "^4.2.11",
    "ignore": "^5.3.2",
    "is-extglob": "^2.1.1",
    "is-glob": "^4.0.3",
    "is-number": "^7.0.0",
    "jsonfile": "^6.2.0",
    "locate-path": "^5.0.0",
    "make-dir": "^3.1.0",
    "merge2": "^1.4.1",
    "micromatch": "^4.0.8",
    "p-limit": "^2.3.0",
    "p-locate": "^4.1.0",
    "p-try": "^2.2.0",
    "path-exists": "^4.0.0",
    "path-type": "^4.0.0",
    "picomatch": "^2.3.1",
    "pkg-dir": "^4.2.0",
    "queue-microtask": "^1.2.3",
    "reusify": "^1.1.0",
    "run-parallel": "^1.2.0",
    "semver": "^6.3.1",
    "slash": "^3.0.0",
    "strip-outer": "^1.0.1",
    "to-regex-range": "^5.0.1",
    "trim-repeated": "^1.0.0",
    "universalify": "^2.0.1"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0"
  }
}
